{
  "rules": {
    "groups": {
      ".read": "true",
      "$groupId": {
        ".validate": "newData.hasChildren(['title'])",
        "title": {
          ".validate": "newData.isString()"
        },
        "unit": {
          ".validate": "newData.isString()"
        },
        "matchRegex": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "members": {
          "$key1": {
            ".validate": "newData.hasChildren()",
            "role": {
              ".validate": "newData.isString()"
            },
            "$other": {
              ".validate": "false"
            }
          },
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "((data.val() == null || ((data.val() != null && newData.val() != null) && (root.child('groups').child($groupId).child('members').child(auth.uid).child('role').val() == 'member' || root.child('groups').child($groupId).child('members').child(auth.uid).child('role').val() == 'admin'))) || ((data.val() != null && newData.val() == null) && root.child('groups').child($groupId).child('members').child(auth.uid).child('role').val() == 'admin'))",
        ".read": "(root.child('groups').child($groupId).child('members').child(auth.uid).child('role').val() == 'member' || root.child('groups').child($groupId).child('members').child(auth.uid).child('role').val() == 'admin')",
        "logs": {
          "$logId": {
            ".validate": "newData.hasChildren()",
            "date": {
              ".validate": "newData.isNumber()"
            },
            "userId": {
              ".validate": "((newData.isString() && newData.val().length >= 28) && newData.val().length <= 128)"
            },
            "value": {
              ".validate": "newData.isNumber()"
            },
            "$other": {
              ".validate": "false"
            }
          }
        }
      }
    },
    "users_private": {
      "$userId": {
        ".validate": "newData.hasChildren(['username'])",
        "username": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "(auth != null && auth.uid == $userId)",
        ".write": "(auth != null && auth.uid == $userId)"
      }
    },
    "users_public": {
      ".read": "auth != null",
      "$userId": {
        ".validate": "newData.hasChildren(['username'])",
        "username": {
          ".validate": "newData.isString()"
        },
        "picture": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null",
        ".write": "(auth != null && auth.uid == $userId)"
      }
    }
  }
}
